{
  "name": "alpyaml",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "bunx --bun vite --open",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts,.vue",
    "lint:fix": "eslint src --ext .ts,.vue --fix",
    "format": "prettier --write \"src/**/*.{ts,vue,js,json,css,scss,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,vue,js,json,css,scss,md}\"",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "quality": "npm run lint && npm run format:check && npm run test",
    "quality:fix": "npm run lint:fix && npm run format",
    "backend": "bun --watch backend/index.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "elysia": "^1.4.4",
    "pinia": "^3.0.3",
    "vue": "^3.5.21",
    "vue-material-design-icons": "^5.3.1"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.13",
    "@types/node": "24.4.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vitejs/plugin-vue": "6.0.1",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/test-utils": "^2.4.6",
    "bun-types": "^1.2.22",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.4.0",
    "happy-dom": "^18.0.1",
    "idb": "^8.0.3",
    "jsdom": "^27.0.0",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "vite": "7.1.5",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "3.0.7"
  }
}
